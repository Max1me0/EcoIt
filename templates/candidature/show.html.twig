{% extends 'base.html.twig' %}

{% block title %}Candidature{% endblock %}

{% block body %}
    <main class="container mt-4">
        <h1>Candidature</h1>

        <div class="container mt-4">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Identifiant</th>
                        <td>{{ candidature.candidat }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ candidature.name }}</td>
                    </tr>
                    <tr>
                        <th>Firstname</th>
                        <td>{{ candidature.firstname }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ candidature.description }}</td>
                    </tr>
                    <tr>
                        <th>Photo du Candidat</th>
                        <td>
                            <div class="container-fluid">
                                <img class="img-fluid img-thumbnail" width="50%" src="{{ asset('uploads/' ~ candidature.photoCandidatPath) }}">
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-center">
                <a class="btn btn-primary" href="{{ path('candidature_index') }}">Retour</a>

                {{ include('candidature/_update_form.html.twig') }}
                {{ include('candidature/_delete_form.html.twig') }}
            </div>
        </div>
    </main>

{% endblock %}
